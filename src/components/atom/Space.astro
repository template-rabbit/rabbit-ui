---
import ListElement from "../atom/ListElement.astro";
export interface Props {
  height?: '0' | '1' | '2' | '4' | '6' | '8' | '10' | '12' |'16' | '24' | '32' | '48' | '64' | '72' | '96'

}

const {height} = Astro.props as Props;

const heights = {
  0: 'h-0',
  1: 'h-1',
  2: 'h-2',
  4: 'h-4',
  6: 'h-6',
  8: 'h-8',
  10: 'h-10',
  12: 'h-12',
  16: 'h-16',
  24: 'h-24',
  32: 'h-32',
  48: 'h-48',
  64: 'h-64',
  72: 'h-72',
  96: 'h-96',
}

const classArray = []
classArray.push(heights[height || '8'])

const combined = classArray.join(' ')
---
<div class={combined} />
