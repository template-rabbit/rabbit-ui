---
import ListElement from "../atom/ListElement.astro";
import Heading from "../atom/Heading.astro";
export interface Props {
  title: string
  features?: string[]

}

const { title, features } = Astro.props as Props;

/*
const sizes = {
  small: 'text-sm',
  normal: 'text-base',
  large: 'text-lg',
}
*/
const classArray = []
classArray.push('w-full border rounded-lg p-4 dark:border-light/15 border-dark/15')

const combined = classArray.join(' ')

---

<div class={combined}>
  <Heading level="3" as="h5" align="center" brand>
    {title}
  </Heading>
  <ul>
    {features && features.map((feature, index) => (
      <ListElement key={index} brand>
        {feature}
      </ListElement>
    ))}
  </ul>
  Price table-ish
  <slot />
</div>
