---
import {Image} from 'astro:assets';
import ImageText from "./ImageText.astro";
export interface Props {
  size?: 'small' | 'normal' | 'large'
  radius?: 'none' | 'small' | 'normal' | 'large' | 'x-large' | '2x-large' | | '3x-large' | 'full'
  spacing?: 'small' | 'normal' | 'large'
  src: string
  width: number
  height: number
  alt: string
  reverce?: boolean
}

const {size, src, alt, radius, width, height, spacing} = Astro.props as Props;
---

<ImageText src={src} alt={alt} width={width} height={height} reverce size={size} radius={radius} spacing={spacing}>
  <slot />
</ImageText>
